                    .Name("btnSearchSlots")
                    .HtmlAttributes(new { type = "button" })
                    .Content("Search Slot")
                    .Events(ev => ev.Click("SearchSlot")))*@
<br /><br />              
   
    
    

           

      
    @(Html.Partial("_SlotMasterGrid"))
</div>